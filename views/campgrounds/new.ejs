<%= layout('layout/boilerplate') %>
    

 
<div class="row my-4 container-sm ">
<h2 class="text-center mb-3">New campground</h2>
<div class="col-md-6 offset-md-3 col-lg-6 offset-md-3   ">
  <div class="">
        <form  action="/campgrounds" method="post" novalidate  class="form-control validated-form"  enctype="multipart/form-data">

<div class="mb-3">
    <label class="form-label"  for="title">Title </label>
    <input class="form-control validated-form"  type="text" name="campground[title]" placeholder="title" id="title" required>
<div class="valid-feedback">
      Looks good!
    </div>
</div>
<div class="mb-3">
    <label class="form-label" for="location">Location</label>
    <input class="form-control validated-form" type="text" name="campground[location]" placeholder="location" id="location" required>
   <div id="validationServer03Feedback" class="invalid-feedback">
      Please provide a valid city and state.
    </div>
</div>

<div class="mb-3">
  <div class="input-group mb-3">
  <input type="file" class="form-control" id="inputGroupFile02" name="image" multiple>
  <label class="input-group-text" for="inputGroupFile02">Upload</label>
</div>
</div>
<div class="mb-3"> 
     <div class="mb-3">
    <label for="price" class="form-label">Campground price </label>
   
</div>
<div class="input-group">
    <span class="input-group-text">$</span>
  <input id="price" type="number" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[price]"  required>
  <span class="input-group-text">a night</span>
</div></div>
<div class="mb-3">
  <label for="description" class="form-label">Description</label>
  <textarea class="form-control validated-form" id="exampleFormControlTextarea1" name="campground[description]" rows="3" required></textarea>
</div>

<div class="mb-3">
<button class="btn btn-success">Submit</button>
 </div>   </form>

</div> <a class=" "href="/campgrounds">All Campgrounds</a></div>

</div>


